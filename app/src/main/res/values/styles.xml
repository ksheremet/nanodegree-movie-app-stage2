<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailActivityTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ItemMarginBordersStyle">
        <item name="android:layout_marginStart">@dimen/border_indent</item>
        <item name="android:layout_marginEnd">@dimen/border_indent</item>
    </style>

    <style name="ImageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BasicImageStyle.DetailPosterStyle" parent="ItemMarginBordersStyle">
        <item name="android:layout_marginTop">@dimen/border_indent</item>
    </style>

    <style name="ImageStyle.TrailersStyle">
        <item name="android:layout_marginTop">@dimen/border_indent</item>
        <item name="android:layout_width">@dimen/trailer_image_width</item>
        <item name="android:layout_height">@dimen/trailer_image_height</item>
        <item name="android:layout_marginStart">@dimen/trailer_image_margin</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MovieTitleStyle" parent="ItemMarginBordersStyle">
        <item name="android:layout_marginTop">@dimen/items_indent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="MovieSubTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

</resources>
